{
  "id": "billing-tracker",
  "name": "Billing Tracker",
  "version": "0.2.0",
  "description": "Tracks token usage per user/agent for billing and monetization (PostgreSQL)",
  "author": "Federico Botti",
  "homepage": "https://github.com/fjbotti/clawdbot-billing-tracker",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "databaseUrl": {
        "type": "string",
        "description": "PostgreSQL connection URL (or set BILLING_DATABASE_URL env var)"
      },
      "botId": {
        "type": "string",
        "description": "Bot identifier for multi-bot setups"
      },
      "agents": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Agent IDs to track (empty = all agents)"
      }
    }
  },
  "uiHints": {
    "enabled": { "label": "Enable Billing Tracker" },
    "databaseUrl": { "label": "Database URL", "placeholder": "postgresql://..." },
    "agents": { "label": "Tracked Agents" }
  }
}
