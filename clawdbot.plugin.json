{
  "id": "billing-tracker",
  "name": "ClawdX Plugin",
  "version": "0.3.0",
  "description": "ClawdX plugin for Clawdbot â€” tracks token usage, conversations, and costs per user/agent",
  "author": "SparkLabs",
  "homepage": "https://getclawdx.vercel.app",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "dashboardUrl": {
        "type": "string",
        "description": "ClawdX dashboard URL (e.g. https://getclawdx.vercel.app)"
      },
      "dashboardApiKey": {
        "type": "string",
        "description": "ClawdX API key (starts with sk_)"
      },
      "databaseUrl": {
        "type": "string",
        "description": "Direct PostgreSQL connection URL (advanced, use dashboardUrl instead)"
      },
      "botId": {
        "type": "string",
        "description": "Bot identifier for multi-bot setups"
      },
      "agents": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Agent IDs to track (empty = all agents)"
      }
    }
  },
  "uiHints": {
    "enabled": { "label": "Enable ClawdX Plugin" },
    "dashboardUrl": { "label": "Dashboard URL", "placeholder": "https://getclawdx.vercel.app" },
    "dashboardApiKey": { "label": "API Key", "placeholder": "sk_..." },
    "databaseUrl": { "label": "Database URL (advanced)", "placeholder": "postgresql://..." },
    "agents": { "label": "Tracked Agents" }
  }
}
